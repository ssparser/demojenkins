pipeline {
    agent any
    
    tools {
        // Specify the name of the Git tool configured in Jenkins
        git 'Default'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the repository using Git
                git branch: 'main', url: 'https://github.com/ssparser/demojenkins.git'
            }
        }
        
        stage('Build') {
            steps {
                sh 'echo "Build step"'
                // Add your build commands here
            }
        }
        
    }
    
    post {
        success {
            echo 'Pipeline succeeded! Deploying artifacts...'
            // Add post-success actions
        }
        failure {
            echo 'Pipeline failed! Sending notifications...'
            // Add post-failure actions
        }
    }
}

